<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Login message -->
    <TextView
        android:id="@+id/tvLoginMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to login"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- No notes message -->
    <TextView
        android:id="@+id/tvNoNotesMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You don't have any notes yet."
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- RecyclerView hiển thị danh sách ghi chú -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Floating action button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Add new note"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>
